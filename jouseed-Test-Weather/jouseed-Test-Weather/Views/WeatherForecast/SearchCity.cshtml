@model jouseed_Test_Weather.Models.SearchCity

@{
    ViewData["Title"] = "SearchCity";
}

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2 class="text-muted"><i>Search the forecast in a city</i></h2>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
                @* If invalid city, show the error message*@
                @if (ViewBag.ErrorMessageForCity != null)
                {
                    <p class="text-danger">
                        @ViewBag.ErrorMessageForCity
                    </p>
                }

            </div>
        </div>
        <br />
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="WeatherForecast" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>

